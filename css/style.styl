@font-face
	font-family 'notitas'
	src url('../fonts/notitas.eot')
	src url('../fonts/notitas.eot?#iefix') format('embedded-opentype')
	src	url('../fonts/notitas.woff') format('woff')
	src	url('../fonts/notitas.ttf') format('truetype')
	src	url('../fonts/notitas.svg#notitas') format('svg')
	font-weight normal
	font-style normal

@import 'nib/vendor'

@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,700')

vendor-prefixes = moz webkit o ms official


[class^='icon-'], [class*=' icon-']
	font-family 'notitas'
	font-smoothing antialiased
	font-style normal
	font-variant normal
	font-weight normal
	line-height 1
	speak none
	text-transform none

.icon-notebook:before
	content '\e600'
	font-size 0.8em
	margin 0 0.325em 0 0.5em

.icon-github:before 
	content '\e601'
	margin 0 0.25em 0 0

.icon-link:before 
	content: '\e602'
	margin 0 0.33em 0 0

.icon-plus:before
	content: '\e603'
	margin 0 0.5em 0 0

.icon-pushpin:before
	content '\e604'

.icon-paperplane:before 
	content "\e605"
	margin 0 0 0 0.25em

.icon-cancel-circle:before
	content "\e606"

body
	background #ecf0f1
	font-family 'Open Sans'
	font-size 16px

footer 
	margin 1em

	p
		color #aaa
		margin 0
		text-align center

		a
			color #3498db
			text-decoration none			

header
	background #3498db
	padding 0.75em 0
	position relative

	a
		background #2980b9
		border-radius 0.25em
		color white
		padding 0.5em 0.75em
		position absolute
		right 1em
		text-decoration none
		top 1em

	h1
		color white
		margin 0
		text-transform lowercase

section
	max-width 768px
	margin 0 auto
	width 90%

	article 
		background white
		border 1px solid #dedede
		border-radius 0.25em
		box-sizing border-box
		margin 1em 0
		padding 1em 2em

		a
			background #3498db
			border-radius 0.25em
			color white
			font-style italic
			padding 0.25em 0.5em 
			text-decoration none

	form 
		display none
		margin 2em 0
		position relative
		overflow auto

		button
			background #3498db
			border none
			border-radius 0.25em
			box-sizing border-box
			color white
			float right
			font-family 'Open Sans'
			margin 0.125em 0
			padding 0.5em 1em

		h3
			margin 0.5em 0

		input
			display block

		input[type='text'], input[type='url']
			border 1px solid #dedede
			border-radius 0.25em
			box-sizing border-box
			margin 0.25em 0
			max-width 200px
			padding 0.3em 0.8em
			width 100%

		textarea
			border 1px solid #dedede
			border-radius 0.25em
			box-sizing border-box
			margin 0.125em 0
			max-width 768px
			padding 0.5em 0.8em
			resize vertical
			width 100%

		.icon-cancel-circle
			cursor pointer
			font-size 1.5em
			position absolute
			right 0
			top 0.4em