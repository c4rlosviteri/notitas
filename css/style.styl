@font-face
	font-family 'notitas'
	src url('../fonts/notitas.eot?-z1w5nz')
	src url('../fonts/notitas.eot?#iefix-z1w5nz') format('embedded-opentype')
	src	url('../fonts/notitas.woff?-z1w5nz') format('woff')
	src	url('../fonts/notitas.ttf?-z1w5nz') format('truetype')
	src	url('../fonts/notitas.svg?-z1w5nz#notitas') format('svg')
	font-weight normal
	font-style normal

@import 'nib/vendor'

@import url('http://fonts.googleapis.com/css?family=Montserrat:400,700')

vendor-prefixes = moz webkit o ms official

verde = #4bb980
amarillo = #fcbe46
rojo = #ec544c
azul = #138fce

[class^='icon-'], [class*=' icon-']
	font-family 'notitas'
	font-smoothing antialiased
	font-style normal
	font-variant normal
	font-weight normal
	line-height 1
	speak none
	text-transform none

.icon-notebook:before
	content '\e600'
	margin 0 0.25em 0 0.5em

.icon-github:before 
	content '\e601'
	margin 0 0.25em 0 0

.icon-link:before 
	content '\e602'

.icon-add:before 
	content '\e603'

.icon-close
	cursor pointer

	&:before 
		content '\e604'
		font-size 1.5em
		position absolute
		right 0
		top 0.3em

.icon-arrow-up-right:before 
	content '\e605'


body
	background #ecf0f1
	font-family 'Montserrat'
	font-size 16px

footer
	margin 1em

	p
		color #bbb
		margin 0
		text-align center

		a
			color azul
			text-decoration none		

header
	background verde
	padding 0.75em 0
	position relative

	a
		background darken(verde, 15%)
		border-radius 0.25em
		color white
		padding 0.5em 0.75em
		position absolute
		right 1em
		text-decoration none
		text-transform uppercase
		top 1em

	h1
		color white
		margin 0
		text-transform uppercase

section
	max-width 768px
	margin 0 auto
	width 90%

	article 
		background white
		border 1px solid #dedede
		border-radius 0.25em
		box-sizing border-box
		display none
		margin 1em 0
		padding 1em 2em

		a
			background azul
			border-radius 0.25em
			color white
			font-style italic
			padding 0.25em 0.5em 
			text-decoration none

	form 
		display none
		margin 2em 0
		padding 0 0 5px 0
		position relative
		overflow auto

		button
			background verde
			border none
			border-radius 0.25em
			box-sizing border-box
			color white
			float right
			font-family 'Montserrat'
			margin 0.125em 0
			padding 0.5em 1em
			text-transform uppercase

		h3
			margin 0.5em 0
			text-transform uppercase

		input
			display block

		input[type='text'], input[type='url']
			border 1px solid #dedede
			border-radius 0.25em
			box-sizing border-box
			margin 0.25em 0
			max-width 200px
			outline 0
			padding 0.3em 0.8em
			width 100%

		textarea
			border 1px solid #dedede
			border-radius 0.25em
			box-sizing border-box
			margin 0.125em 0
			max-width 768px
			min-height 80px
			outline 0
			padding 0.5em 0.8em
			resize vertical
			width 100%

		.icon-cancel-circle
			cursor pointer
			font-size 1.5em
			position absolute
			right 0
			top 0.4em

	#aviso
		border-radius 4px
		font-weight normal
		margin 2em 0
		text-align center
		text-transform uppercase

		span 
			background rojo
			color white
			padding 0.25em 0.5em